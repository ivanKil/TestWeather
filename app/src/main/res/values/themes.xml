<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherAppAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WeatherAppAndroid.TextViewDescr">
        <item name="android:layout_marginTop">@dimen/base_margin_descr</item>
    </style>

    <style name="Theme.WeatherAppAndroid.TextViewData">
        <item name="android:textSize">@dimen/data_text</item>
        <item name="android:layout_marginStart">@dimen/data_margin</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <dimen name="base_margin_descr">15dp</dimen>
</resources>